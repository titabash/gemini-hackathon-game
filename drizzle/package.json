{
  "name": "@shadcn-boilerplate/drizzle",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "generate": "drizzle-kit generate --config=drizzle.config.ts",
    "migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "push": "drizzle-kit push --config=drizzle.config.ts",
    "studio": "drizzle-kit studio --config=drizzle.config.ts",
    "check": "drizzle-kit check --config=drizzle.config.ts",
    "migrate:pre": "bun run migrate.ts pre-migration",
    "migrate:post": "bun run migrate.ts post-migration",
    "lint": "biome check --write .",
    "lint:ci": "biome check .",
    "format": "biome format --write .",
    "format-check": "biome format ."
  },
  "dependencies": {
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/bun": "^1.3.1",
    "bun-types": "^1.3.1",
    "drizzle-kit": "^0.31.6"
  }
}
